@model TextField


@{
    ViewData["Title"] = "Редактирование страниц сайта";
}

<script src="~/js/ckeditor5-build-classic/ckeditor.js"></script>

<div class="container">
    <h1>Редактирование полей сайта</h1>
    <div class="container">
        <form asp-area="Admin" asp-controller="TextFields" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AddingDate" />
            <input type="hidden" asp-for="CodeWord" />
            <div asp-validation-summary="All"></div>
            <div class="container">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="container">
                <label asp-for="Text"></label>
                <textarea asp-for="Text" style="width: auto; height: 200px; slide"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="container">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            <div class="container">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" />
                <span asp-validation-for="MetaDescription"></span>
            </div>
            <div class="container">
                <label asp-for="MetaKeywords"></label>
                <input asp-for="MetaKeywords" />
                <span asp-validation-for="MetaKeywords"></span>
            </div>
            <input type="submit" />
        </form>
    </div>
</div>
