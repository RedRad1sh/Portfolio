@model ProjectItem

@{
    ViewData["Title"] = "Редактирование проекта.";
}


<script src="~/js/ckeditor/ckeditor.js"></script>

<div class="container">
    <h1>Редактирование проекта</h1>
    <div class="container">
        <form asp-area="Admin" asp-controller="ProjectItems" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AddingDate" />
            <input type="hidden" asp-for="CodeWord" />
            <div asp-validation-summary="All"></div>
            <div class="container">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="container">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            <div class="container">
                <label asp-for="Technologies"></label>
                <input asp-for="Technologies" />
                <span asp-validation-for="Technologies"></span>
            </div>
            <div class="container">
                <label asp-for="ShortDescription"></label>
                <input asp-for="ShortDescription" />
                <span asp-validation-for="ShortDescription"></span>
            </div>
            <div class="container">
                <label asp-for="UrlToPreview"></label>
                <input type="file" name="UrlToPreview" asp-for="UrlToPreview" />
                <div>
                    <img style="width:400px" src="~/images/@Model.UrlToPreview" />
                </div>
            </div>
            <div class="container">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            <div class="container">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" />
                <span asp-validation-for="MetaDescription"></span>
            </div>
            <div class="container">
                <label asp-for="MetaKeywords"></label>
                <input asp-for="MetaKeywords" />
                <span asp-validation-for="MetaKeywords"></span>
            </div>
            <input type="submit" />
        </form>
    </div>
</div>

<script type="text/javascript">
    window.onload = function(){
       var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
      newCKEdit.updateElement();
    }
</script>
